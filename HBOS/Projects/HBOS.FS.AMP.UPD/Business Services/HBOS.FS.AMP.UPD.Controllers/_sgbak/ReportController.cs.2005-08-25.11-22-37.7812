		/// <param name="endDate"></param>
		/// <returns></returns>
		public static DataSet LoadPredictedPricesReportByFund( string connectionString , string fundID, DateTime startDate, DateTime endDate)
		{
			T.E();

			try
			{
				ReportPersister myReportPersister = new ReportPersister( connectionString );
				return myReportPersister.PredictedPricesReportByFund( fundID , startDate , endDate );
			}
			finally
			{
				T.X();
			}
		}

